{% extends 'base.html.twig' %}

{% block title %}Item
{% endblock %}

{% block body %}
	<section class="hero-section position-relative bg-light-blue padding-medium">
		<div class="hero-content">
			<div class="container">
				<div class="row">
					<div class="text-center padding-large no-padding-bottom">
						<h1 class="display-2 text-uppercase text-dark">{{ item.name }}</h1>
						<div class="breadcrumbs">
							<span class="item">
								<a href="{{path('home.index')}}">Home ></a>
							</span>
							<span class="item">
								<a href="{{path('app_item_index')}}">Shop ></a>
							</span>
							<span class="item">{{ item.name }}</span>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
	<div class="container mt-2">
		{% if item.quantity == 0 %}
			<div class="card card-background shadow p-3 bg-body-tertiary rounded" style="background-image: url('/images/SoldOut.png'); background-size: 100% 100%; background-repeat: no-repeat; background-position: center;">
			{% else %}
				<div class="card shadow p-3 bg-body-tertiary rounded" style="">
				{% endif %}
				<div class="row g-0">
					<div class="col-md-4 d-flex justify-content-center">
						<img src="{{asset('/images/'~ item.picture) }}" class="img-fluid object-fit-cover" id="imgCard" alt="...">
					</div>
					<div class="col-md-8">
						<div class="card-body">
							<h5 class="card-title">{{ item.name }}</h5>

							<p class="card-text">
								<small class="text-info">Brand:
									{{ item.brand }}</small>
							</p>
							<p class="card-text">
								<small class="text-info">Category:
									{{ item.category.type }}</small>
							</p>
							<p class="card-text">
								<small class="text-black">Description:
									{{ item.description }}</small>
							</p>
							<p class="card-text">
								<small class="text-danger">Price:
									{{ item.price }}
									$</small>
							</p>
							<p class="card-text">
								<small class="text-secondary">Quantity:
									{{ item.quantity }}</small>
							</p>
							<div>
								{% if item.quantity > 0 %}
									<form action="{{ path('cart_add', {'id': item.id}) }}" method="post">
										<input type="number" name="quantity" min="1" max="{{ item.quantity }}" value="1" class="btn btn-black rounded-0">
										<button type="submit" class="btn btn-black text-uppercase btn-rounded-none">Add to cart</button>
									</form>
								{% else %}
									<p class="text-danger ">Sold Out !</p>
								{% endif %}

							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>


{% endblock %}
