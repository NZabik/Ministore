{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
<section class="hero-section position-relative bg-light-blue padding-medium">
		<div class="hero-content">
			<div class="container">
				<div class="row">
					<div class="text-center padding-large no-padding-bottom">
						<h1 class="display-2 text-uppercase text-dark">Register</h1>
						<div class="breadcrumbs">
							<span class="item">
								<a href="{{path('home.index')}}">Home ></a>
							</span>
							<span class="item">Register</span>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
	<div class="container mt-4">
	<h1 class="h3 mb-3 font-weight-normal">Create an account</h1>
	</div>
		{{ form_errors(registrationForm) }}

		{{ form_start(registrationForm) }}
		<div class="container">
			{{ form_start(registrationForm) }}
			<div class="form-error">
				{{ form_errors(registrationForm.nom)}}
			</div>
			<div class="form-group">
				{{ form_label(registrationForm.nom) }}
				{{ form_widget(registrationForm.nom) }}
			</div>
			<div class="form-error">
				{{ form_errors(registrationForm.prenom)}}
			</div>
			<div class="form-group">
				{{ form_label(registrationForm.prenom) }}
				{{ form_widget(registrationForm.prenom) }}
			</div>
			<div class="form-error">
				{{ form_errors(registrationForm.email)}}
			</div>
			<div class="form-group">
				{{ form_label(registrationForm.email) }}
				{{ form_widget(registrationForm.email) }}
			</div>
			<div class="form-error">
				{{ form_errors(registrationForm.plainPassword)}}
			</div>
			<div class="form-group">
				{{ form_label(registrationForm.plainPassword) }}
				{{ form_widget(registrationForm.plainPassword) }}
			</div>
            <div class="form-error">
				{{ form_errors(registrationForm.adresse)}}
			</div>
			<div class="form-group">
				{{ form_label(registrationForm.adresse) }}
				{{ form_widget(registrationForm.adresse) }}
			</div>
            <div class="form-error">
				{{ form_errors(registrationForm.codePostal)}}
			</div>
			<div class="form-group">
				{{ form_label(registrationForm.codePostal) }}
				{{ form_widget(registrationForm.codePostal) }}
			</div>
            <div class="form-error">
				{{ form_errors(registrationForm.ville)}}
			</div>
			<div class="form-group">
				{{ form_label(registrationForm.ville) }}
				{{ form_widget(registrationForm.ville) }}
			</div>
			<div class="form-error">
				{{ form_errors(registrationForm.agreeTerms)}}
			</div>
			<div class="form-group">
				{{ form_label(registrationForm.agreeTerms) }}
				{{ form_widget(registrationForm.agreeTerms) }}
			</div>
			<button type="submit" class="btn btn-black text-uppercase btn-rounded-none">Register</button>
			{{ form_end(registrationForm) }}
		</div>
	{% endblock %}
