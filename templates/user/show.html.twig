{% extends 'base.html.twig' %}

{% block title %}User
{% endblock %}

{% block body %}
	<section class="hero-section position-relative bg-light-blue padding-medium">
		<div class="hero-content">
			<div class="container">
				<div class="row">
					<div class="text-center padding-large no-padding-bottom">
						<h1 class="display-2 text-uppercase text-dark">User informations</h1>
						<div class="breadcrumbs">
							<span class="item">
								<a href="{{path('home.index')}}">Home ></a>
							</span>
							<span class="item">User</span>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
	<div class="container mt-4">
		<div class="card mb-4" style="max-width: 30rem;">
					<div class="card-body">
						<h1 class="card-title">{{ user.prenom }}
							{{ user.nom }}</h1>

						<p class="card-text">
							<p class="text-primary">Email:</p>
								<p class="text-black">{{ user.email }}</p>
						</p>
						<p class="card-text">
							<p class="text-primary">Address:</p>
								<p class="text-black">{{ user.adresse }},
								{{ user.codePostal }},
								{{ user.ville }}</p>
						</p>
							<a href="{{ path('app_orders_show') }}" class="btn btn-black text-uppercase btn-rounded-none mx-2">Orders</a>
							<a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-secondary text-uppercase btn-rounded-none mx-2">Edit</a>
							<a href="{{ path('app_logout') }}" class="btn btn-warning text-uppercase btn-rounded-none mx-2">Logout</a>
					</div>
		</div>
		<a href="{{path('home.index')}}" class="btn btn-black text-uppercase btn-rounded-none">Back to home</a>
	</div>

{% endblock %}
